<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.LoginUserDao">
    <resultMap id="LoginUserResult" type="com.example.demo.entity.LoginUser">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="loginName" column="login_name"/>
        <result property="password" column="password"/>
    </resultMap>
    <select id="getLoginUser" parameterType="string" resultMap="LoginUserResult">
        select id,name,login_name,password from user where login_name=#{loginName} order by id desc
    </select>
</mapper>